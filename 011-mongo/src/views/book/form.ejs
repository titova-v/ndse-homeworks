<form method="POST" class="mt-5" enctype="multipart/form-data">
    <div class="form-group">
        <label for="inputTitle">Title</label>
        <input type="text"
               value="<%= book.title %>"
               name="title"
               class="form-control"
               id="inputTitle">
    </div>

    <div class="form-group">
        <label for="inputAuthors">Authors</label>
        <input type="text"
               value="<%= book.authors %>"
               name="authors"
               class="form-control"
               id="inputAuthors">
    </div>

    <div class="form-group">
        <label for="inputDescription">Description</label>
        <textarea
                rows="3"
                name="description"
                class="form-control"
                id="inputDescription"
        ><%= book.description %></textarea>
    </div>

    <div class="form-group">
        <div class="form-check">
        <input type="checkbox"
               name="favorite"
               class="form-check-input"
               id="inputFavorite"
               <%= book.favorite ? "checked" : "" %>>
               <label class="form-check-label" for="inputFavorite">Favorite</label>
            </div>
    </div>

    <div class="form-group">
        <div class="form-group">
            <label for="inputFileCover">Choose a file cover</label>
            <input name="fileCover" type="file" class="form-control-file" id="inputFileCover" value="<%= book.fileCover %>">
        </div>
        </div>

        <div class="form-group">
            <label for="inputFile">Choose a book</label>
            <input name="fileBook" type="file" class="form-control-file" id="inputFile" value="<%= book.fileBook %>">
        </div>

    <div class="form-group text-right ">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>