<%- include('../port/layout-start', {title}) %>
<%- include('../port/menu') %>

<a class="btn btn-sm btn-primary" href="books/create">Add book</a>

    <% if(books.length) { %>

        <table class="table table-striped table-sm  mt-3">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Header</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
    
                <% books.map((el, idx) => {  %>
                    <tr>
                        <th scope="row"><%= idx +1 %></th>
                        <td><%= el.title %></td>
                        <td class="text-left">
                            <% if(el.favorite) { %>
                            <i class="fa fa-star" style="color: #FFF200" aria-hidden="true"></i>
                            <% } %>
                        </td>
                        <td class="text-right">
                            <form action="/books/download/<%= el.id %>" method="GET" class="d-inline">
                                <button class="btn btn-sm btn-info">
                                    <i class="fa fa-download" aria-hidden="true"></i>
                                </button>
                            </form>
                            <a class="btn btn-sm btn-success" href="/books/<%= el.id %>">
                                <i class="fa fa-eye" aria-hidden="true"></i>
                            </a>
                            <a class="btn btn-sm btn-primary" href="/books/update/<%= el.id %>">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </a>
                            <form action="/books/delete/<%= el.id %>" method="POST" class="d-inline">
                                <button class="btn btn-sm btn-danger">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
    
            </tbody>
        </table>

    <% } else { %>   
        <h3 class="mt-5">No books yet</h3>
    <% } %>    

    



<%- include('../port/layout-end') %>

